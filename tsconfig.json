{
    "include": [
        "src/**/*.js",
        "src/**/*.ts",
        "external-types/**/*.ts"
    ],
    "compilerOptions": {
        "lib": ["ES2017", "DOM"],
        "outDir": "dist",
        "declaration": true,
        "emitDeclarationOnly": true,
        "esModuleInterop": true,
        "allowJs": true,
        "forceConsistentCasingInFileNames": true,
        "noImplicitAny": true,
        // "noUnusedParameters": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        // "noUnusedLocals": true,
        "skipLibCheck": true,
        "strictNullChecks": true,
        "strictFunctionTypes": true,
        "baseUrl": "./",
        "paths": {
            // "@lib/*": ["src/*"],
            "@env": ["src/env/prod"],
        }
    }
}